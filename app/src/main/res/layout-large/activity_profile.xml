<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_home"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_toolbar_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_search_top"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/blue">

                <ImageView
                    android:id="@+id/img_search_ic_navigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_navigation_bar" />

                <TextView
                    android:id="@+id/text_view_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ToolbarTitle"
                    android:text="@string/label_profile"/>

            </android.support.v7.widget.Toolbar>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_toolbar_top"
            android:layout_above="@+id/layout_toolbar_bot"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_profile_avatar"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewProfile" />
                <TextView
                    android:id="@+id/tv_profile_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewProfile" />
                <TextView
                    android:id="@+id/tv_profile_bday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewProfile" />
                <TextView
                    android:id="@+id/tv_profile_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewProfile" />
                <TextView
                    android:id="@+id/tv_profile_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewProfile" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkBlue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_trending"
                    android:tint="@color/blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_feedback"
                    style="@style/TextViewProfile2"/>

                <TextView
                    android:id="@+id/tv_profile_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewProfile2" />


                <TextView
                    android:paddingLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_followers"
                    style="@style/TextViewProfile2" />

                <TextView
                    android:id="@+id/tv_profile_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewProfile2" />

                <TextView
                    android:paddingLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_followeed"
                    style="@style/TextViewProfile2"/>

                <TextView
                    android:id="@+id/tv_profile_followeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewProfile2" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkBlue"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/email_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_account_box"
                        android:tint="@color/blue"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_profile_email"
                        style="@style/TextViewProfile2"/>

                    <TextView
                        android:id="@+id/tv_profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile2" />

                </LinearLayout>

                <TextView
                    android:layout_below="@+id/email_layout"
                    android:paddingLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_profile_password"
                    style="@style/TextViewProfile2" />

                <TextView
                    android:id="@+id/tv_profile_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewProfile2" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkBlue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_description"
                    android:tint="@color/blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_description"
                    style="@style/TextViewProfile2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_profile_description"
                    android:paddingLeft="35dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkBlue"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkBlue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_announcement"
                    android:tint="@color/blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_announcement"
                    style="@style/TextViewProfile2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_profile_notice"
                    android:paddingLeft="35dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkBlue"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkBlue"/>

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_toolbar_bot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_home_activities"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/ib_search_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_home"
                        android:layout_marginRight="100dp" />

                    <ImageButton
                        android:id="@+id/ib_search_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_search"
                        android:layout_marginRight="100dp" />

                    <ImageButton
                        android:id="@+id/ib_search_relation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_relation" />

                    <ImageButton
                        android:id="@+id/ib_search_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_profile"
                        android:layout_marginLeft="100dp"/>

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_profile_gallery"
            android:layout_margin="5dp"
            app:backgroundTint="@color/blue"
            android:layout_above="@+id/layout_toolbar_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_add_a_photo"
            style="@style/FloatingActionButton"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_profile_location"
            android:layout_marginLeft="45dp"
            android:layout_toRightOf="@+id/fab_profile_gallery"
            android:layout_above="@+id/layout_toolbar_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location"
            app:backgroundTint="@color/blue"
            style="@style/FloatingActionButton"
            />
        <android.support.design.widget.FloatingActionButton

            android:id="@+id/fab_profile_edit"
            android:layout_marginRight="45dp"
            android:layout_toLeftOf="@+id/fab_profile_gallery"
            android:layout_above="@+id/layout_toolbar_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            app:backgroundTint="@color/blue"
            style="@style/FloatingActionButton"
            />

    </RelativeLayout>

</FrameLayout>