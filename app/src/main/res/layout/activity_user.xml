<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_home"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_toolbar_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_search_top"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/blue">

                <ImageView
                    android:id="@+id/img_user_ic_navigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/white"/>

                <TextView
                    android:id="@+id/tv_user_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ToolbarTitle"
                    />

            </android.support.v7.widget.Toolbar>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_toolbar_top"
            android:layout_above="@+id/fab_profile_edit"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/first_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_user_avatar"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile" />
                    <TextView
                        android:id="@+id/tv_user_surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile" />
                    <TextView
                        android:id="@+id/tv_user_bday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile" />
                    <TextView
                        android:id="@+id/tv_user_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile" />
                    <TextView
                        android:id="@+id/tv_user_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkBlue"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_trending"
                        android:tint="@color/blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_feedback"
                        style="@style/TextViewProfile2"/>

                    <TextView
                        android:id="@+id/tv_user_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile2" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_followers"
                        style="@style/TextViewProfile2" />

                    <TextView
                        android:id="@+id/tv_user_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile2" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkBlue"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_description"
                        android:tint="@color/blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_description"
                        style="@style/TextViewProfile2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_user_description"
                        android:paddingLeft="35dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkBlue"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkBlue"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_announcement"
                        android:tint="@color/blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_announcement"
                        style="@style/TextViewProfile2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_user_notice"
                        android:paddingLeft="35dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkBlue"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkBlue"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_toolbar_bot"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:isScrollContainer="false"
            android:orientation="horizontal">

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_user_follow"
            android:layout_margin="5dp"
            app:backgroundTint="@color/blue"
            android:layout_above="@+id/layout_toolbar_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_person_add"
            style="@style/FloatingActionButton"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_user_location"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/fab_user_follow"
            android:layout_above="@+id/layout_toolbar_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location"
            app:backgroundTint="@color/blue"
            style="@style/FloatingActionButton"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_user_feedback"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/fab_user_follow"
            android:layout_above="@+id/layout_toolbar_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thumb_up"
            app:backgroundTint="@color/blue"
            style="@style/FloatingActionButton"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_user_message"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/fab_user_feedback"
            android:layout_above="@+id/layout_toolbar_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sms"
            app:backgroundTint="@color/blue"
            style="@style/FloatingActionButton"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_user_report"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/fab_user_location"
            android:layout_above="@+id/layout_toolbar_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_warning"
            app:backgroundTint="@color/blue"
            style="@style/FloatingActionButton"
            />

    </RelativeLayout>

</FrameLayout>